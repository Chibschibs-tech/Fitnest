{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --no-audit --no-fund --force",
        "buildCommand": "npm run build"
      }
    }
  ],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "MINIMAL_MODE": "false",
    "DEBUG_MODE": "true"
  }
}
